<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginRight="-3dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/totalIncome"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/heading"
            android:button="@null"
            android:drawableLeft="@drawable/incoming"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="130Sar"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/balance"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/heading"
            android:button="@null"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:paddingRight="10dp"
            android:textAlignment="center" />

        <RadioButton

            android:id="@+id/totalOutcome"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/heading"
            android:button="@null"
            android:drawableLeft="@drawable/outcoming"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="200SAR"
            android:textAlignment="center" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-100dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Select category to view"
        android:textColor="#070707"
        android:textSize="24sp" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:layout_marginRight="-30dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/customselector"
            android:button="@null"
            android:drawableTop="@drawable/incomeblack"
            android:paddingTop="30dp"
            android:text="Salary"
            android:textAlignment="center" />

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/customselector"
            android:button="@null"
            android:drawableTop="@drawable/investment"
            android:paddingTop="30dp"
            android:text="Investments"
            android:textAlignment="center" />

        <RadioButton

            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/customselector"
            android:button="@null"
            android:drawableTop="@drawable/allincomes"
            android:paddingTop="30dp"
            android:text="All Incomes"
            android:textAlignment="center" />

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginLeft="-431dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/customselector"
            android:button="@null"
            android:drawableTop="@drawable/purchses"
            android:paddingTop="30dp"

            android:text="Purchases"
            android:textAlignment="center" />

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/customselector"
            android:button="@null"
            android:drawableTop="@drawable/outcomeblack"
            android:paddingTop="30dp"
            android:text="Transfers"
            android:textAlignment="center" />

        <RadioButton

            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/customselector"
            android:button="@null"
            android:drawableTop="@drawable/alloutcomes"
            android:paddingTop="30dp"
            android:text="All OutComes"
            android:textAlignment="center" />
        <!--            android:layout_marginTop="150dp"/>-->


        <!--        <TextView-->
        <!--            android:id="@+id/textView4"-->
        <!--            android:layout_width="104dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginLeft="-370dp"-->
        <!--            android:layout_marginTop="50dp"-->
        <!--            android:fontFamily="sans-serif-condensed"-->
        <!--            android:text="Outcome"-->
        <!--            android:textColor="#070707"-->
        <!--            android:textSize="24sp"/>-->
        <RadioButton

            android:layout_width="370dp"
            android:layout_height="100dp"
            android:layout_marginLeft="-369dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/customselector"
            android:button="@null"
            android:paddingBottom="50dp"
            android:text="All"
            android:textAlignment="center"
            />


    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Period"
        android:textColor="#070707"
        android:textSize="24sp" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginRight="-15dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/daily"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/customselector"
            android:button="@null"
            android:checked="false"
            android:paddingBottom="10dp"
            android:text="Daily"
            android:textAlignment="center" />

        <RadioButton
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/customselector"
            android:button="@null"
            android:paddingBottom="10dp"
            android:text="Monthly"
            android:textAlignment="center" />


    </RadioGroup>

    <Button
        android:id="@+id/generate"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="57dp"
        android:onClick="onClick"
        android:text="Generate"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/reset"
        android:layout_width="100dp"
        android:layout_height="57dp"
        android:layout_marginLeft="269dp"
        android:layout_marginTop="-60dp"
        android:onClick="resetAll"
        android:text="Reset"
        android:textColor="@color/black" />


</LinearLayout>


